// Ques= https://www.codingninjas.com/studio/problems/stack-implementation-using-array_3210209?leftPanelTabValue=PROBLEM

// Stack class.
class node{
public:
    int data;
    node*next;
    node(int d){
        data=d;
        next=NULL;
    }
};

class Stack {
    node*head;
    int size;
    int topd;
    
public:
    
    Stack(int capacity) {
        
        size=capacity;
        topd=0;
    }

    void push(int num) {
        if(isFull()){
            return;
        }else{
            node*temp=new node(num);
            topd++;
            if(isEmpty()){
                head=temp;
            }else{
                temp->next=head;
                head=temp;
            }
        }
    }

    int pop() {
        if(isEmpty()){
            return -1;
        }else{
            int store=head->data;
            node*temp=head;
            head=head->next;

            delete temp;
            topd--;
            return store;
        }
    }
    
    int top() {
        if(isEmpty()){
            return -1;
        }else{
            return head->data;
        }
    }
    
    int isEmpty() {
        // Write your code here.
        if(topd==0){
            return true;
        }else{
            return  false;
        }
    }
    
    int isFull() {
        if(topd==size){
            return true;
        }else{
            return false;
        }
    }
    
};
